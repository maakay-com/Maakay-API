{
  "swagger": "2.0",
  "info": {
    "title": "Guestbook API",
    "description": "API documentation of guestbook.",
    "version": "1.0.0"
  },
  "host": "",
  "basePath": "/",
  "schemes": ["http", "https"],
  "securityDefinitions": {
    "jwt": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization"
    }
  },
  "security": [
    {
      "jwt": []
    }
  ],
  "paths": {
    "/api/v1/users/nonce": {
      "post": {
        "description": "Get user nonce for signing",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "accountNumber": {
                  "example": "0x08Dc3835827e7958D5ABAeF12c09b7C128a93DFD"
                },
                "provider": {
                  "example": "metamask"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/UserNonceResponse"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/SingleMessage"
            }
          }
        }
      }
    },
    "/api/v1/users/create-jwt": {
      "post": {
        "description": "create jwt after signing nonce",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "accountNumber": {
                  "example": "0x08Dc3835827e7958D5ABAeF12c09b7C128a93DFD"
                },
                "provider": {
                  "example": "metamask"
                },
                "signature": {
                  "example": "0xb91467e570a6466aa9e9876cbcd013baba02900b8979d43fe208a4a4f339f5fd6007e74cd82e037b800186422fc2da167c747ef045e5d18a5f5d4300f8e1a0291c"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "accessToken": {
                  "type": "string",
                  "example": "string"
                },
                "refreshToken": {
                  "type": "string",
                  "example": "string"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "description": "Invalid Signature",
              "$ref": "#/definitions/SingleMessage"
            }
          },
          "404": {
            "schema": {
              "description": "User not found or invalid provider",
              "$ref": "#/definitions/SingleMessage"
            }
          },
          "500": {
            "schema": {
              "description": "Internal Server Error",
              "$ref": "#/definitions/SingleMessage"
            }
          }
        }
      }
    },
    "/api/v1/users/refresh-jwt": {
      "post": {
        "description": "generate access token from refresh token",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "refreshToken": {
                  "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2NDc0MzNhMjMzNTZlMzQ2M2Q1NThlODMiLCJhY2NvdW50TnVtYmVyIjoiMHgwOERjMzgzNTgyN2U3OTU4RDVBQkFlRjEyYzA5YjdDMTI4YTkzREZEIiwicHJvdmlkZXIiOiJtZXRhbWFzayIsInR5cGUiOiJSRUZSRVNIIiwiaWF0IjoxNjg1MzM2OTk0LCJleHAiOjE2ODc5Mjg5OTR9.eZS769mOjaKCHg_WNwiliSm7CSWO68kXcLLvAimzJA4"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "accessToken": {
                  "type": "string",
                  "example": "string"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "401": {
            "schema": {
              "description": "expired/ invalid refresh token",
              "$ref": "#/definitions/SingleMessage"
            }
          },
          "500": {
            "schema": {
              "description": "Internal Server Error",
              "$ref": "#/definitions/SingleMessage"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "SingleMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "string"
        }
      }
    },
    "BadRequestError": {
      "type": "object",
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "msg": {
                "type": "string",
                "example": "string"
              },
              "param": {
                "type": "string",
                "example": "param"
              },
              "location": {
                "type": "string",
                "example": "body"
              }
            }
          }
        }
      }
    },
    "UserNonceResponse": {
      "type": "object",
      "properties": {
        "nonce": {
          "type": "number",
          "example": 12345678
        }
      }
    }
  }
}
